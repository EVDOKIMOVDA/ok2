@model PizzaDelivery.ViewModels.PizzaVM

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">Добавить пиццу</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-6">
                        <label asp-for="Pizza.Pizza_name"></label>
                        <input asp-for="Pizza.Pizza_name" class="form-control" />
                        <span asp-validation-for="Pizza.Pizza_name" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Pizza.Amount"></label>
                        <input asp-for="Pizza.Amount" class="form-control" />
                        <span asp-validation-for="Pizza.Amount" class="text-danger"></span>
                    </div>
                    <div class="col-6">
                        <label asp-for="Pizza.Price"></label>
                        <input asp-for="Pizza.Price" class="form-control" />
                        <span asp-validation-for="Pizza.Price" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <label asp-for="Pizza.Restaurant"></label>
                        <select asp-for="Pizza.Restaurant_id" asp-items="@Model.TDDRestaurant" class="form-control">
                            <option selected>--Select Restaurant--</option>
                        </select>
                        <span asp-validation-for="Pizza.Restaurant_id" class="text-danger"></span>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="create" />
                        </div>
                        <div class="col">
                            <a asp-action="Index" class="btn btn-danger w-75">Назад</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</form>

@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}

