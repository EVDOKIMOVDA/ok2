@model IEnumerable<PizzaDelivery.Data.Courier>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список курьеров</h2>
        </div>
        @if (User.IsInRole("admin") || User.IsInRole("moderator"))
        {
            <div class="col-6 text-right">
                <a asp-controller="Courier" asp-action="Create" class="btn btn-primary">Создать нового курьера</a>
            </div>
        }
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <div class=" container overflow-hidden">
            <div class="row">
                @foreach (var obj in Model)
                {<div class="col-6">

                     <div class="card p-3  my-2 border bg-light">
                         <h4>Курьер</h4>
                         <div>
                             <section>
                                 <div class="row">
                                     <div class="col-md-8 col-lg-3">
                                         <div class="row">
                                             <aside class="col-sm-6 col-md-12 p-4">
                                                 <img src="~/images/courier.png" class="img-thumbnail" alt="...">
                                             </aside>
                                         </div>
                                     </div>
                                     <main>
                                         Имя:@obj.Name<br /><br />
                                         Фамилия:@obj.Surname<br /><br />
                                         Телефон:@obj.Phone<br /><br />
                                     </main>
                                 </div>
                             </section>
                         </div>
                         <div class="w-100 btn-group" role="group">
                             @if (User.IsInRole("admin") || User.IsInRole("moderator"))
                             {
                                 <a asp-controller="Courier" asp-action="Update" asp-route-Id="@obj.Id" class="btn btn-primary mx-1 ">Изменить</a>
                             }
                             @if (User.IsInRole("admin"))
                             {
                                 <a asp-controller="Courier" asp-action="Delete" asp-route-Id="@obj.Id" class="btn btn-danger mx-1">Удалить</a>
                             }
                         </div>
                     </div>
                    </div>
                }
            </div>
        </div>
    }
    else
    {
        <p>Здесь ничего нет</p>
    }

</div>
