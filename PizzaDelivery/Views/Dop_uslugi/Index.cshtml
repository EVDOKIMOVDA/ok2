@model IEnumerable<PizzaDelivery.Data.Dop_uslugi>

<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Список дополнительных услуг</h2>
        </div>
        @if (User.IsInRole("admin"))
            {

                <div class="col-6 text-right">
                    <a asp-controller="Dop_uslugi" asp-action="Create" class="btn btn-primary">Создать дополнительную услугу</a>
                </div>

            }
    </div>
    <br />

    @if (Model.Count() > 0)
    {
        <table class="table table-bordered table-striped" style="width:100%">
            <thead>
                <tr>
                    <th>
                        Доп. услуга
                    </th>
                    <th>
                        Действия
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var restaurant in Model)
                {
                <tr>
                    <td width="70%">@restaurant.Name</td>
                    @if (User.IsInRole("admin") || User.IsInRole("moderator")) 
                    {
                        <td width="30%">
                            <div class="w-100 btn-group" role="group">
                                <a asp-controller="Dop_uslugi" asp-action="Update" asp-route-Id="@restaurant.Id" class="btn btn-primary mx-1">Изменить</a>
                                <a asp-controller="Dop_uslugi" asp-action="Delete" asp-route-Id="@restaurant.Id" class="btn btn-danger mx-1">Удалить</a>
                            </div>
                        </td>
                    }

                </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p>Здесь ничего нет</p>
    }

</div>

